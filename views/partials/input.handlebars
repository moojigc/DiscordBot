<div class="col s8">
    <div class="input-field">
        <div class="prefixed-label">
            <button class="btn-floating red lighten-1 waves-effect waves-light del-btn"><i
                    class="material-icons">remove</i></button>
        </div>
        <input aria-label="name" type="text" maxlength="180" class="preloaded name" placeholder="{{name}}"
            value="{{name}}">
    </div>
</div>
<div class="col s4">
    <div class="input-field">
        <label for="quantity" class="prefixed-label">#</label>
        <input type="number" class="preloaded quantity" placeholder="?" value="{{quantity}}">
    </div>
</div>