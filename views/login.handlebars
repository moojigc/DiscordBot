{{> navbar}}
<main class="container wrapper">
    <header>
        <h1>Login</h1>
    </header>
    <div class="row form-wrapper">
        <form action="/api/login" method="POST">
            <div class="input-field">
                <i class="material-icons prefix">account_circle</i>
                <input required type="text" class="validate username" name="username" placeholder="Enter username">
            </div>
            <div class="input-field">
                <i class="material-icons prefix">fingerprint</i>
                <input required type="password" class="validate password" name="password" placeholder="Enter password">
            </div>
            {{#if error}}
            <div class="row alert alert-danger">{{error}}</div>
            {{/if}}
            {{#if errorMsg}}
            <div class="row alert alert-danger">{{errorMsg}}</div>
            {{/if}}
            {{#if successMsg}}
            <div class="row alert alert-success">{{successMsg}}</div>
            {{/if}}
            <button type="submit" class="btn btn-large waves-effect waves-orange purple lighten-1 login-btn">Login<i
                    class="material-icons right">send</i></button>
        </form>
    </div>
    <a href="/register">Click here to register.</a>
</main>